<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.API" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/day_main_color</item>
        <item name="colorPrimaryVariant">@color/day_background_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">@color/day_background_color</item>
        <item name="colorAccent">@color/day_main_color</item>
        <!-- Secondary brand color. -->
        <item name="android:textColorPrimary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="for_heading_text">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/day_main_color</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circular_progress_bar</item>
    </style>

    <style name="for_movie_text">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>